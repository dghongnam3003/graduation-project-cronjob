{
  "compilerOptions": {
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "removeComments": true,
    "noImplicitAny": false,
    "strictNullChecks": false, // Allows null and undefined to be assigned to any type
    "strictFunctionTypes": false, // A
    "outDir": "./dist",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": [
      "es2015",
      "es2016",
      "es6",
      "es2017",
      "dom"
    ],
    "esModuleInterop": true
  }
}